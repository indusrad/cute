{
    "app-id" : "org.gnome.Capsule.Devel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "capsule",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "libpeas",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dlua51=false",
                "-Dpython3=false",
                "-Dgjs=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libpeas.git",
                    "branch" : "main"
                }
            ]
        },
        {
            "name" : "vte",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dgtk3=false",
                "-Dgtk4=true"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/vte.git",
                    "branch" : "master"
                }
            ]
        },
        {
            "name" : "capsule",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts" : [
                "-Ddevelopment=true"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "path" : "."
                }
            ]
        }
    ]
}
