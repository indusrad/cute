{
    "app-id" : "org.gnome.Prompt.Devel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "prompt",
    "finish-args" : [
        "--allow=devel",
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.freedesktop.Flatpak"
    ],
    "x-run-args" : [
        "--standalone"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "libportal",
            "config-opts" : [
                "--buildtype=debugoptimized",
                "-Dbackends=gtk4",
                "-Ddocs=false",
                "-Dtests=false"
            ],
            "buildsystem" : "meson",
            "builddir" : true,
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/flatpak/libportal/releases/download/0.6/libportal-0.6.tar.xz",
                    "sha256" : "88a12c3ba71bc31acff7238c280de697d609cebc50830c3766776ec35abc6566"
                }
            ]
        },
        {
            "name" : "vte",
            "buildsystem" : "meson",
            "config-opts" : [
                "--buildtype=release",
                "-Dgtk3=false",
                "-Dgtk4=true",
                "-Dglade=false",
                "-Dgir=false",
                "-Dvapi=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/vte.git",
                    "branch" : "master"
                },
                {
                    "type" : "patch",
                    "path" : "build-aux/0001-Add-sequences-and-signals-for-desktop-notification.patch"
                },
                {
                    "type" : "patch",
                    "path" : "build-aux/0002-vte.sh-Emit-OSC-777-from-PROMPT_COMMAND.patch"
                },
                {
                    "type" : "patch",
                    "path" : "build-aux/0003-Test-the-notification-received-signal.patch"
                },
                {
                    "type" : "patch",
                    "path" : "build-aux/0004-Support-preexec-notifications-from-an-interactive-sh.patch"
                },
                {
                    "type" : "patch",
                    "path" : "build-aux/0005-Test-the-shell-preexec-signal.patch"
                },
                {
                    "type" : "patch",
                    "path" : "build-aux/0006-Support-precmd-notifications-from-an-interactive-she.patch"
                },
                {
                    "type" : "patch",
                    "path" : "build-aux/0007-Test-the-shell-precmd-signal.patch"
                },
                {
                    "type" : "patch",
                    "path" : "build-aux/0008-Support-tracking-the-active-container-inside-the-ter.patch"
                },
                {
                    "type" : "patch",
                    "path" : "build-aux/0009-expose-notification-shellcmd-containers-to-GTK-4.patch"
                }
            ]
        },
        {
            "name" : "prompt",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts" : [
                "-Ddevelopment=true"
            ],
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                }
            ]
        }
    ]
}
