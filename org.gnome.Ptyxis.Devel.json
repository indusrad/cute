{
    "app-id" : "org.gnome.Ptyxis.Devel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "ptyxis",
    "finish-args" : [
        "--allow=devel",
        "--device=dri",
        "--filesystem=home",
        "--filesystem=host",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.Flatpak"
    ],
    "x-run-args" : [
        "--standalone"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/static",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "zlib",
            "buildsystem" : "simple",
            "build-commands" : [
                "./configure --prefix=/app/static --libdir=/app/static/lib",
                "make",
                "make install"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/madler/zlib.git",
                    "tag" : "v1.3.1"
                }
            ]
        },
        {
            "name" : "libpcre2-8",
            "buildsystem" : "autotools",
            "config-opts" : [
                "--enable-static",
                "--prefix=/app/static",
                "--libdir=/app/static/lib"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/PCRE2Project/pcre2.git"
                }
            ]
        },
        {
            "name" : "libffi",
            "buildsystem" : "autotools",
            "config-opts" : [
                "--enable-static",
                "--prefix=/app/static",
                "--libdir=/app/static/lib"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/libffi/libffi.git"
                }
            ]
        },
        {
            "name" : "glib",
            "buildsystem" : "meson",
            "config-opts" : [
                "--prefix=/app/static",
                "--libdir=lib",
                "-Dpkg_config_path=/app/static/lib/pkgconfig",
                "-Ddefault_library=static",
                "-Ddocumentation=false",
                "-Dintrospection=disabled",
                "-Dlibelf=disabled",
                "-Dlibmount=disabled",
                "-Dman-pages=disabled",
                "-Dnls=disabled",
                "-Dselinux=disabled",
                "-Dsysprof=disabled",
                "-Dtests=false",
                "-Dxattr=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/glib.git",
                    "branch" : "main"
                }
            ]
        },
        {
            "name" : "json-glib",
            "buildsystem" : "meson",
            "config-opts" : [
                "--buildtype=debugoptimized",
                "--prefix=/app/static",
                "--libdir=lib",
                "-Dpkg_config_path=/app/static/lib/pkgconfig",
                "-Ddefault_library=static",
                "-Dgtk_doc=disabled",
                "-Dintrospection=disabled",
                "-Dman=false",
                "-Dnls=disabled",
                "-Dtests=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/json-glib.git",
                    "branch" : "master"
                }
            ]
        },
        {
            "name" : "libportal",
            "config-opts" : [
                "--buildtype=debugoptimized",
                "-Dbackends=gtk4",
                "-Ddocs=false",
                "-Dtests=false"
            ],
            "buildsystem" : "meson",
            "builddir" : true,
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/flatpak/libportal/releases/download/0.6/libportal-0.6.tar.xz",
                    "sha256" : "88a12c3ba71bc31acff7238c280de697d609cebc50830c3766776ec35abc6566"
                }
            ]
        },
        {
            "name" : "vte",
            "buildsystem" : "meson",
            "config-opts" : [
                "--buildtype=release",
                "-Dgtk3=false",
                "-Dgtk4=true",
                "-Dglade=false",
                "-Dgir=false",
                "-Dvapi=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/vte.git",
                    "branch" : "master"
                },
                {
                    "type" : "patch",
                    "path" : "build-aux/0001-add-notification-and-shell-precmd-preexec.patch"
                }
            ]
        },
        {
            "name" : "ptyxis-agent",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dpkg_config_path=/app/static/lib/pkgconfig:/app/lib/pkgconfig:",
                "-Ddevelopment=true",
                "-Dagent=true",
                "-Dui=false",
                "-Dstatic-agent=true"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/ptyxis.git",
                    "branch" : "wip/chergert/static-linking"
                }
            ]
        },
        {
            "name" : "ptyxis",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts" : [
                "-Ddevelopment=true",
                "-Dagent=false",
                "-Dui=true"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/ptyxis.git",
                    "branch" : "wip/chergert/static-linking"
                }
            ]
        }
    ]
}
